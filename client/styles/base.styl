$base-font-size = 18px
$base-font-family = Menlo, Helvetica, sans-serif
$text-color = #333
$bkgd-color = #fff

html
  font-family $base-font-family
  font-size $base-font-size
  padding 0
  margin 0
  width 100%
  height 100%

body
  font-size 1em
  background $bkgd-color
  color $text-color
  width 100%
  height 100%
  padding 0
  margin 0

.site__header
  border-bottom 1px solid #777
  padding 1em 2em
  display flex
  justify-content space-between
  align-items center

.site__title
  text-transform uppercase
  font-size 1rem
  margin 0
  padding 0  

.site__nav
  text-transform uppercase
  font-size 1rem

.site__nav-item
  margin 0 0.5rem

.social__nav
  font-size 1.4rem

.page
  width 640px
  margin 0 auto

.page__title
  text-transform uppercase
  font-size 1.2rem
  text-align center
  margin 0
  padding 2rem 0 1rem 0

.u-nolist
  list-style-type none
  padding 0
  margin 0
  &--h
    li
      display inline

.u-left
  float left

.u-right
  float right

.u-clear
  &:after
    content ""
    display table
    clear both

