$base-font-size = 14px
$base-font-family = Menlo, Helvetica, sans-serif
$text-color = #333
$bkgd-color = #fff

html
  font-family $base-font-family
  font-size $base-font-size
  padding 0
  margin 0
  width 100%
  height 100%

body
  font-size 1em
  background $bkgd-color
  color $text-color
  width 100%
  height 100%
  padding 0
  margin 0

h1
  text-transform lowercase

h2
  text-transform lowercase